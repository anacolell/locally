<div class="interests-wrapper">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xs-12 col-sm-10 col-sm-offset-4">
        <div class="form-interests">
          <% @categories.each do |category| %>
            <h4 class="my-3">
              <% if category.name == "Sports" %>
                <i class="fas fa-futbol"></i>
              <% elsif category.name == "Food" %>
                <i class="fas fa-hamburger"></i>
              <% elsif category.name == "Going Out" %>
                <i class="fas fa-glass-cheers"></i>
              <% elsif category.name == "Music" %>
                <i class="fas fa-music"></i>
              <% end %>
              <%= category.name %>
            <h4>
            <% category.interests.each do |interest| %>
              <% if @user.interests.include?(interest) %>
                <div id="interest-<%= interest.id %>" class="active-tag"><%= link_to interest.name, user_interest_path(interest), class: "interest-link", method: :delete, remote: true %></div>
              <% else %>
                <div id="interest-<%= interest.id %>" class="interest-tag"><%= link_to interest.name, user_interests_path(interest: interest.id), class: "interest-link", method: :post, remote: true %></div>
              <% end %>
            <% end %>
          <% end %>
          <div class="interests-btn"><%= link_to "Save interests", profile_path(current_user.id), class:'interests-green-btn' %></div>

        </div>
      </div>
    </div>
  </div>
</div>
