<div class="container">
  <h1>Your profile</h1>
  <p>Tell us a little bit about yourself</p>

  <%= simple_form_for current_user, url:profile_path do |f| %>
    <%= f.error_notification %>
    <%= f.input :first_name, placeholder: 'First name' %>
    <%= f.input :last_name, placeholder: 'Last name' %>
    <%= f.input :gender, collection: User::GENDER %>
    <%= f.input :age %>
    <%= f.input :location %>
    <%#= f.select :languages %>
    <%= f.input :languages, as: :check_boxes, collection: User::LANGUAGES%>
    <%= f.input :birthdate,
                as: :date,
                start_year: Date.today.year - 18,
                end_year: Date.today.year - 99,
                order: [:day, :month, :year] %>
    <%= f.input :description, as: :text, placeholer: 'Tell us a little bit about yourself!' %>
    <%= f.input :photo, as: :file %>
    <%#= f.input :photo_cache, as: :hidden %>
    <%= f.button :submit, 'Update profile' %>
  <% end %>
</div>
