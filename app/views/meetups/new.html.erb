<div class="meetups-wrapper">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xs-12 col-sm-10 col-sm-offset-4">
        <h4 class="title-meetup">Let's explore <%= @conversation.local.city %> with <%= @conversation.local.first_name %></h4>
        <div class="form-meetups">
            <%= simple_form_for [@conversation, @meetup] do |f| %>
              <%= f.error_notification %>
              <%= f.input :location %>
              <%= f.input :date_time, as: :date, html5: true %>
              <%#= f.input :time, :as => :time %>
              <%= f.submit 'Save meetup!', class: "btn btn-success w-100 text-white" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
