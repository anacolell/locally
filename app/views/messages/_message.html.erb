<div class="message-container" id="message-<%= message.id %>">
  <i class="author">
    <% if current_user.id == message.user_id %>
    <div class="bubble">
    <span><%= message.user.first_name %></span>
    <small><%= message.created_at.strftime("%a, %H:%M") %></small> <!-- ("%l:%M %p  |  %b %e") -->
  </i>
  <p><%= message.content %></p>
</div>
<% end %>
</div>
